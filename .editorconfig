root = true

# General settings for all files
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
charset = utf-8
end_of_line = lf

# CSS files
[*.{css,scss}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# JSON files
[*.{json}]
insert_final_newline = true
end_of_line = lf